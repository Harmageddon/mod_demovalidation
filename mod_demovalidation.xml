<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1.0" client="site" method="upgrade">
	<name>Form Validation Demo</name>
	<author>Constantin Romankiewicz</author>
	<version>0.0.1</version>
	<description>This module won't show anything. Its only purpose is to display a form in backend.</description>
	<files>
		<filename>mod_demovalidation.xml</filename>
		<filename module="mod_demovalidation">mod_demovalidation.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="text1"
					type="text"
					label="Text 1"
					validate="equals"
					field="text2"
				/>
				<field
					name="text2"
					type="text"
					label="Text 2"
				/>
				<field
					name="cat"
					type="category"
					label="Category"
					validate="options"
					extension="com_content"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
